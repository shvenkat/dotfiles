# ----------  KEY BINDINGS  --------------------------------------------------

set editing-mode emacs

# Least disruptive Ctrl- substitutes for Meta- bindings in the default (emacs) keymap.
set bind-tty-special-chars off
"\C-l": forward-word
"\C-o": backward-word
"\C-q": kill-word
"\C-w": backward-kill-word
"\C-t": history-search-backward
"\C-^": history-search-forward


# ----------  VARIABLES  -----------------------------------------------------

# Disable 8-bit input/output.
set convert-meta On
set enable-meta-key On
set input-meta Off
set output-meta Off

# Filename completion.
set match-hidden-files On
set completion-ignore-case On
set completion-map-case On
set menu-complete-display-prefix On
# set completion-prefix-display-length 10
set show-all-if-ambiguous On
set show-all-if-unmodified On
set colored-stats On
set visible-stats On
set mark-directories On
set mark-symlinked-directories On
set skip-completed-text On
set expand-tilde Off

# Search.
set isearch-terminators "\C-j"

# Misc.
set enable-keypad On
# set keyseq-timeout 500
set bell-style none
