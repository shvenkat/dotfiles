[flake8]
max-line-length = 80

# Enable the following categories of checks:
#   E: PEP8 errors
#   W: PEP8 warnings
#   F: pyflakes fatals
#   C: complexity
#   B: bugbear default checks
select = E,W,F,C,B,B9

# Ignore the following issues. Code formatting is handled by other tools.
#   E203: whitespace before (a delimiter in) ,;:
#   E241: multiple spaces after ‘,’
#   E251: unexpected spaces around keyword / parameter equals
#   E252: missing space around keyword / parameter equals
#   W503: line break before binary operator
#   B950: line too long (redundant with E501 and cannot be ignored by noqa: B950)
ignore = E203,E241,E252,W503,B950

# The mccabe plugin raises false positive errors for functions using local functions.
# max-complexity = 10

per-file-ignores =
    __init__.py:F401
